@model App.Web.Lib.ViewModels.AuthVm.UserProperties
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-navbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "App")" class="navbar-brand load-ajax"><span id="ajax-loader" class="fa fa-fw fa-bolt"></span> @AppConfig.AppName</a>
        </div>
        <div class="navbar-collapse main-navbar collapse">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="@Url.Action("Index", "App")" class="load-ajax" data-toggle="tooltip" data-placement="bottom" title="About"><span class="fa fa-fw fa-info"></span><span class="hidden-sm hidden-md hidden-lg"> About</span></a></li>
                <li><a href="@Url.Action("Index", "App")" class="load-ajax" data-toggle="tooltip" data-placement="bottom" title="Contact"><span class="fa fa-fw fa-envelope"></span><span class="hidden-sm hidden-md hidden-lg"> Contact</span></a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-fw fa-star"></span><span class="hidden-sm hidden-md hidden-lg"> Demo </span><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("index", "App")"><span class="fa fa-fw fa-caret-right"></span> Dashboard</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-fw fa-cog"></span><span class="hidden-sm hidden-md hidden-lg"> Admin </span><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index", "User")"><span class="fa fa-fw fa-caret-right"></span> Users</a></li>
                        <li><a href="@Url.Action("Index", "Role")"><span class="fa fa-fw fa-caret-right"></span> Roles</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Model.IsAuthenticated)
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-fw fa-user"></i> @Model.Username
                            <i class="caret"></i>
                        </a>
                        <ul class="dropdown-menu">
                            @using (Html.BeginForm("SignOut", "Auth", FormMethod.Post, new { id = "sign-out-form" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-block btn-sm btn-success"> Sign Out</button>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
